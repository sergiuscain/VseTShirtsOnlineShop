@model LoginModel

<form method="post">
    <div class="col text-center  border-primary">
        <div class="validation btn text-danger" asp-validation-summary="All"></div>
        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
        <div>
            <label asp-for="UserName"><h5>Логин:</h5></label>
            <br />
            <input class="col-3" asp-for="UserName" />
            <div><span asp-validation-for="UserName"></span></div>
        </div>

        <div>
            <label asp-for="Password"><h5> Пароль:</h5></label><br />
            <input class="col-3" type="password" asp-for="Password" />
            <div><span asp-validation-for="Password"></span></div>
        </div>
        <div>
            <input asp-for="ExternalLogins" value="@Model.ExternalLogins">
        </div>
        <div>
            <label asp-for="isRemembMe">Запомнить меня:</label>
            <input asp-for="isRemembMe" value="true">
        </div>
        <div>
            <button class="border-success col-3" type="submit" asp-area="" asp-controller="Account" asp-action="Login">Войти</button>
        </div>
        <div>
            <a asp-area=""
               asp-controller="Account"
               asp-action="ResetPassword" class="btn shadow">
                Сброс пароля.
            </a>
            <a class="btn shadow"
               asp-area=""
               asp-controller="Account"
               asp-action="Register" target="_blank" asp-route-ReturnUrl="@Model.ReturnUrl">
                Регистрация.
            </a>
            <div>
                @foreach (var provider in Model.ExternalLogins){
                    <button type="submit" asp-controller="UserEntering" asp-action="ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" class="btn btn-primary" name="provider" value="@provider.Name">@provider.DisplayName</button>
                }
            </div>
     </div>
</div>
</form>