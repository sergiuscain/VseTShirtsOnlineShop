@model ProductViewModel

<div class="row">
    <div class=" col-6">
        
        <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">   
            <div class="carousel-inner">
                @for (var i = 0; i < Model.ImagePaths.Count; i++)
                {
                    if (i == 0)
                    {
                    <div class="carousel-item active">
                        <img src="@Model.ImagePaths[i]" class="d-block" width="600" alt="@Model.ImagePaths[i]" />
                        </div>
                    }
                    else
                    {
                        <div class="carousel-item">
                            <img src="@Model.ImagePaths[i]" class="d-block" width="600" alt="@Model.ImagePaths[i]" />
                        </div>
                    }
                }
            </div>  
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
            </button>
        </div>

    </div>
    <div class="col-3 card shadow">
        <div>
            <h5>@Model.Name</h5>
            <h5>@Model.Price</h5>
            <a class="btn btn-dark" 
            asp-area=""
            asp-controller="Home"\
            asp-action="Index" role="button">Продолжить покупки</a>
            <a class="btn btn-dark"
               asp-area=""
               asp-controller="Cart"
               asp-action="Add"
               asp-route-id="@Model.Id" role="button">Добавить в корзину</a>
            <h5>@Model.Description</h5>
        </div>
    </div>
